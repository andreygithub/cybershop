<div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
    <div class="thumbnail catalog-thumbnail">
        <a href="[[+link]]"><img src="[[phpthumbof? &input=`[[+image]]` &options=`h=200`]]" alt="" /></a>
        <div class="info">
            <div class="caption"><a href="[[+link]]">[[+name]]</a></div>
            [[<div class="description">[[+description]]</div>]]
            <div class="thumbnail-footer">
                <div class="text-price">[[+price1]] [[++cybershop.currency]]</div>
                <div class="btn-price"><a href="[[+link]]" class="btn btn-primary " role="button">Купить</a></div>
            </div>
        </div>
    </div>
</div>